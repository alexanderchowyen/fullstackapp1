<body class="profile">
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fas fa-seedling"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
