        </div>
        <div class="col-sm-6">
          <h3>In Season Fruits & Veg</h3>
          <ul class="produce">
          <% for(var i=0; i<inRightNow.length; i++) {%>
            <li class="message">
              <span class="produceName"><%= inRightNow[i].name %></span>
              <span><%= inRightNow[i].season %></span>
              <span class='save'>save</span>
            </li>
          <% } %>
          </ul>
        </div>
        <div class="col-sm-6">
          <h3>Saved Fruits & Veg</h3>
          <ul class="savedProduce">
          <% for(var i=0; i<produce.length; i++) {%>
            <li class="produceItem">
              <span class="produceName"><%= produce[i].name %></span>
              <span class="produceSeason"><%= produce[i].season %></span>
              <!-- <span><i class="fas fa-heart" aria-hidden="true"></i></span> -->
              <button class="deleteSaved">delete</button>
            </li>
          <% } %>
          </ul>
        </div>
        <div class="col-sm-6">
          <h3>All Produce</h3>
          <ul class="savedProduce">
          <% for(var i=0; i<allProduce.length; i++) {%>
            <li class="produceItem">
              <span class="produceName"><%= allProduce[i].name %></span>
              <span class="produceSeason"><%= allProduce[i].season %></span>
              <span class='save'>save</span>
            </li>
          <% } %>
          </ul>
        </div>

<script src="main.js"></script>

